// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Seller {
  id         Int     @id @default(autoincrement())
  name       String?
  email      String  @unique
  password   String?
  rate       Int
  language   String?
  experience Int
  pitch      String?
}

model User {
  id         Int     @id @default(autoincrement())
  name       String?
  email      String  @unique
  password   String?
  bookings   Booking[]
}

model Booking {
  id               Int     @id @default(autoincrement())
  sellerIdBooking  Int
  userBooking      User @relation(fields: [userIdBooking], references: [id])
  userIdBooking    Int
  sellerName       String?
  sellerEmail      String
  sellerRate       Int
  sellerLanguage   String?
  sellerExperience String?
  userName         String?
  userEmail        String
  bookingDate      String?
  bookingTime      String?
  bookingDuration  Int @default(0)
  bookingPrice     Int @default(0)
  bookingRequest   String?
}
